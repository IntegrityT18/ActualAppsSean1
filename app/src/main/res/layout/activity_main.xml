<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Mobile Apps 2023"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/white"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:adjustViewBounds="true"
            android:elevation="10dp"
            android:maxWidth="200dp"
            android:src="@drawable/logo"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/border">


            <TextView
                android:id="@+id/textView_main_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Welcome to Mobile Apps Period 2"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@color/black"/>


            <EditText
                android:id="@+id/editText_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_main_head"
                android:background="@drawable/border"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="5dp"/>


            <EditText
                android:id="@+id/editText_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_login_email"
                android:background="@drawable/border"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:hint="Password"
                android:inputType="textEmailAddress"
                android:padding="5dp"/>


            <ImageView
                android:id="@+id/imageView_show_hide_pwd"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/editText_login_email"
                android:layout_alignParentRight="true"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="30dp"/>


            <Button
                android:id="@+id/button_login"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_login_pwd"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Login"/>


            <TextView
                android:id="@+id/textView_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_login"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Not a user yet?"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_link_register"
                android:layout_below="@id/textView_register"
                android:text="Sign up now!"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressbar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                style="?android:attr/progressBarStyleLarge"
                android:elevation="10dp"
                android:indeterminateTint="@color/purple_200"
                android:visibility="gone"/>


        </RelativeLayout>


    </LinearLayout>


</ScrollView>
